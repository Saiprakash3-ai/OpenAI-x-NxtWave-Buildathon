<body>
    <div class="container">
        <h1>VyaparAI ðŸš€</h1>
        <p>Enter your order in natural language (e.g., "2 notebooks, 5 pens for John")</p>
        
        <textarea id="orderText" placeholder="e.g., I need 3 notebooks and 5 pens for Sarah..."></textarea>
        <br>
        <button onclick="processOrder()">Process Order</button>
        
        <div id="result"></div>
        <div id="inventorySection">
            <h2>Current Inventory</h2>
            <div id="inventory"></div>
        </div>
    </div>

    <script>
        // Load inventory on page load
        document.addEventListener('DOMContentLoaded', loadInventory);
        
        function loadInventory() {
            fetch('/api/inventory')
                .then(response => response.json())
                .then(data => {
                    let inventoryHtml = '<table><tr><th>Product</th><th>Price</th><th>Stock</th></tr>';
                    data.forEach(item => {
                        inventoryHtml += `<tr><td>${item.name}</td><td>â‚¹${item.price}</td><td>${item.stock}</td></tr>`;
                    });
                    inventoryHtml += '</table>';
                    document.getElementById('inventory').innerHTML = inventoryHtml;
                });
        }
        
        function processOrder() {
            const orderText = document.getElementById('orderText').value;
            if (!orderText) {
                alert('Please enter an order');
                return;
            }
            
            document.getElementById('result').innerHTML = '<p>Processing...</p>';
            
            fetch('/api/process-order', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ text: orderText })
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    document.getElementById('result').innerHTML = `<p class="error">Error: ${data.error}</p>`;
                } else {
                    // Display the bill
                    const bill = data.bill;
                    let billHtml = `
                        <div class="bill">
                            <h2>Bill Generated Successfully!</h2>
                            <p><strong>Customer:</strong> ${bill.customer}</p>
                            <p><strong>Date:</strong> ${bill.date}</p>
                            <table>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                </tr>
                    `;
                    
                    bill.items.forEach(item => {
                        billHtml += `
                            <tr>
                                <td>${item.name}</td>
                                <td>${item.quantity}</td>
                                <td>â‚¹${item.price}</td>
                                <td>â‚¹${item.subtotal}</td>
                            </tr>
                        `;
                    });
                    
                    billHtml += `
                            <tr>
                                <td colspan="3" style="text-align: right;"><strong>Total:</strong></td>
                                <td><strong>â‚¹${bill.total}</strong></td>
                            </tr>
                        </table>
                        <button onclick="downloadBill(${JSON.stringify(bill).replace(/'/g, "\\'")})">Download Bill as CSV</button>
                    </div>
                    `;
                    
                    document.getElementById('result').innerHTML = billHtml;
                    
                    // Reload inventory to reflect changes
                    loadInventory();
                }
            })
            .catch(error => {
                document.getElementById('result').innerHTML = `<p class="error">Error: ${error.message}</p>`;
            });
        }
        
        function downloadBill(bill) {
            fetch('/api/download-bill', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ bill: bill })
            })
            .then(response => response.blob())
            .then(blob => {
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = `bill_${bill.customer}_${bill.date.substring(0, 10)}.csv`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            })
            .catch(error => console.error('Error downloading bill:', error));
        }
    </script>
</body>
</html>
